<%= form_for @business, html: {class:'form-horizontal'} do |f| %>
    <% if @business.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@business.errors.count, "error") %> prohibited this <%= @business.class.name %> from being saved:</h2>

          <ul>
            <% @business.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="control-group">
      <%= f.label :name, 'Business Name', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :contact, 'Contact Name', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :contact, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :product, 'Service or Product', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :product, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :phone, 'Phone Number', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :phone, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :website, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :website, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :email, 'email', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :email, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :street, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :street, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :city, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :city, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
    <%= f.label :state, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :state, :class => 'text_field' %>
        </div>
    </div>
    <div class="control-group">
      <%= f.label :zip, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :zip, :class => 'text_field' %>
      </div>
    </div>

    <%= f.hidden_field :category_id %>
    <div class="actions">
        <%= f.submit 'Create New Business' %>
    </div>

<% end %>
