    <div class="field">
      <%= f.label :contact, 'Contact Name' %><br>
      <%= f.text_field :contact %>
    </div>
    <div class="field">
      <%= f.label :product, 'Service or Product' %><br>
      <%= f.text_field :product %>
    </div>
    <div class="field">
      <%= f.label :phone, 'Phone Number' %><br>
      <%= f.text_field :phone %>
    </div>
    <div class="field">
      <%= f.label :website %><br>
      <%= f.text_field :website %>
    </div>
    <div class="field">
      <%= f.label :email, 'email' %><br>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :street %><br>
      <%= f.text_field :street %>
    </div>
    <div class="field">
      <%= f.label :city %><br>
      <%= f.text_field :city %>
    </div>
    <div class="field">
      <%= f.label :state %><br>
      <%= f.text_field :state %>
    </div>
    <div class="field">
      <%= f.label :zip %><br>
      <%= f.text_field :zip %>
    </div>

    <%= f.hidden_field :category_id %>
    <div class="actions">
      <%= f.submit 'Create New Business' %>
    </div>
