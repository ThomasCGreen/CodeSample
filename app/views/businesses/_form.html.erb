<%= form_for(@business) do |f| %>
    <% if @business.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@business.errors.count, "error") %> prohibited this <%= @business.class.name %> from being saved:</h2>

          <ul>
            <% @business.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name, 'Business Name' %><br>
      <%= f.text_field :name %>
